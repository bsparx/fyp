generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  // uncomment next line if you use Prisma <5.10
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

enum Role {
  ADMINISTRATOR
  DOCTOR
  PATIENT
}

enum DocumentType {
  RAG
  PATIENT
}

enum RagSubtype {
  MEDICINE
  DISEASE
}

enum PatientDataType {
  REPORT
  COMMENT
}

model User {
  id          String   @id @default(cuid())
  clerkId     String   @unique
  email       String   @unique
  name        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  role        Role     @default(PATIENT)
  documents   Document[]
  medicalReports MedicalReport[]
  medicalReportValues MedicalReportValue[]
}

model Document {
  id              String       @id @default(cuid())
  title           String
  content         String       @db.Text
  pdfUrl          String?
  type            DocumentType @default(RAG)
  ragSubtype      RagSubtype?
  patientDataType PatientDataType?
  isIngested      Boolean      @default(false)
  
  // Optional relation to User (who this document belongs to)
  userId          String?
  user            User?        @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  // RAG document chunks stored in Pinecone
  ragChunks       RagChunk[]
  parentChunks    ParentChunk[]
  medicalReports  MedicalReport[]
}

// Stores parent chunk text to avoid redundancy in Pinecone metadata
model ParentChunk {
  id              String   @id @default(cuid())
  documentId      String
  document        Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  parentIndex     Int
  parentText      String   @db.Text
  
  createdAt       DateTime @default(now())
  
  // All child chunks reference this parent
  ragChunks       RagChunk[]
  
  @@unique([documentId, parentIndex])
}

model RagChunk {
  id              String   @id @default(cuid())
  documentId      String
  document        Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  
  // Reference to parent chunk instead of storing parent text directly
  parentChunkId   String
  parentChunk     ParentChunk @relation(fields: [parentChunkId], references: [id], onDelete: Cascade)
  
  chunkIndex      Int
  chunkText       String   @db.Text
  pineconeId      String   @unique
  
  createdAt       DateTime @default(now())
}

// Model for storing medical report key-value pairs
model MedicalReport {
  id              String   @id @default(cuid())
  documentId      String
  document        Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  
  // Report metadata
  reportDate      DateTime?
  hospitalName    String?
  
  // User relation
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Key-value pairs for the report
  reportValues    MedicalReportValue[]
}

// Model for storing individual key-value pairs from medical reports
model MedicalReportValue {
  id              String   @id @default(cuid())
  reportId        String
  report          MedicalReport @relation(fields: [reportId], references: [id], onDelete: Cascade)
  
  // User relation
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Key-value data (all uppercase for standardization)
  key             String       // e.g., "VITAMIN D2"
  value           String       // e.g., "1.15"
  unit            String?      // e.g., "NG/ML"
  
  createdAt       DateTime @default(now())
  
  @@index([reportId])
  @@index([key])
  @@index([userId])
}

